{
  "name": "Weblinks.click Google Chrome extension",
  "version": "0.0.0.2",
  "description": "This is an extension for adding your web links to Weblinks.click site",
  "manifest_version": 3,
  "permissions" : [
    "activeTab"
  ],
  "host_permissions" : [
    "https://api.weblinks.click/"
  ],  
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click to add web link"
  },
  "homepage_url": "https://weblinks.click/"
}
